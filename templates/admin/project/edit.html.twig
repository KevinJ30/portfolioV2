{% extends 'admin.html.twig' %}

{% block title %} Editer un projet {% endblock %}

{% block content %}

    <div class="container">
        <div class="p-3 bg-white rounded-3 border shadow-sm">
            <h1>Editer le projet</h1>
            <hr />

            {{ form_start(form) }}

            {{ form_row(form.title) }}

            {{ form_row(form.url) }}

            {{ form_row(form.thumbFilename) }}

            {{ form_row(form.excerpt) }}

            {{ form_row(form.details) }}

            {{ form_row(form.description) }}

            {{
                form_row(form.submit, {
                    'label': 'Modifier le projet'
                })
            }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}