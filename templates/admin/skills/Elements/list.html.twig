<table class="table table-bordered m-0">
    <thead>
        <tr class="text-center align-middle">
            <th>Nom de la compétence</th>
            <th>Type de la compétence</th>
            <th>Niveau de maitrise</th>
            <th>Icones</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for skill in skills %}
            <tr class="text-center align-middle">
                <td>{{ skill.name }}</td>
                <td>{{ skill.type }}</td>
                <td>{{ skill.level }}</td>
                <td><span class="thumb__skill">{{ skill.icons | raw }}</span></td>
                <td>
                    <form action="{{ path('ADMIN_SKILLS_DELETE', {id: skill.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        <input type="hidden" name="token" value="{{ csrf_token('skill-delete') }}">
                        <a href="{{ path('ADMIN_SKILLS_EDIT', {id: skill.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil-fill" role="img" aria-label="Modifier un élément"></i>
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill" role="img" aria-label="Supprimer un élément"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>