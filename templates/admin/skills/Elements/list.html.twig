<table class="table table-bordered m-0">
    <thead>
        <tr class="text-center align-middle">
            <th>Nom de la compétence</th>
            <th>Type de la compétence</th>
            <th>Niveau de maitrise</th>
            <th>Icones</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for skill in skills %}
            <tr data-id="{{ skill.id }}" class="text-center align-middle">
                <td>{{ skill.name }}</td>
                <td>{{ skill.type }}</td>
                <td>{{ skill.level }}</td>
                <td><span class="thumb__skill">{{ skill.icons | raw }}</span></td>
                <td>
                    <a href="{{ path('ADMIN_SKILLS_EDIT', {id: skill.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil-fill" role="img" aria-label="Modifier un élément"></i>
                    </a>
                    <crud-action-delete url_action="{{ path('ADMIN_SKILLS_DELETE', {id: skill.id}) }}" element_id="{{ skill.id }}" token="{{ csrf_token('skill-delete') }}"></crud-action-delete>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>