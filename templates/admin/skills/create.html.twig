{% extends 'admin.html.twig' %}

{% block title %}Créer une compétence{% endblock %}

{% block content %}
    <div class="container">
        <div class="section section_skill_create">
            <h1 class="section__title mb-5">Créer une compétence</h1>
            {{ form_start(form) }}

            <div class="form-row">
                {{
                    form_row(form.name, {
                        'row_attr': { 'class': 'col' }
                    })
                }}

                {{
                    form_row(form.type, {
                        'row_attr': { 'class': 'col' }
                    })
                }}

                {{
                form_row(form.level, {
                    'row_attr': { 'class': 'col' }
                })
                }}
            </div>

            {{  form_end(form) }}
        </div>
    </div>
{% endblock %}
