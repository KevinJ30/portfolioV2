{% extends 'base.html.twig' %}

{% block seo_description %}
    <meta name="description" content="Vous avez besoins d'un renseignement, envoyez-moi un message avec le formulaire.">
{% endblock %}

{% block title %}Me Contactez{% endblock %}

{% block body %}
    <main class="page page-home">
        <div class="section">
            <div class="container">
                <h1>Me contactez</h1>
                <p>{{ contact_text.content }}</p>

                <div class="contact__form">
                    {{ form_start(form) }}
                        <div class="form-row">
                            {{ form_row(form.fullname) }}
                            {{ form_row(form.email) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}