{% if pageCount > 1 %}
    <nav class="pagination">
        {% if previous is defined %}
            <a rel="prev" class="pagination--btn pagination--btn-prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                <svg class="icon-prev" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.67 3.86998L15.9 2.09998L6 12L15.9 21.9L17.67 20.13L9.54 12L17.67 3.86998Z" fill="currentColor"/>
                </svg>
            </a>
        {% else %}
            <span class="pagination--btn pagination--btn-prev">
                <svg class="icon-prev" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.67 3.86998L15.9 2.09998L6 12L15.9 21.9L17.67 20.13L9.54 12L17.67 3.86998Z" fill="currentColor"/>
                </svg>
            </span>
        {% endif %}

        {% if startPage > 1 %}
            <a class="pagination--btn pagination--btn-number" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            {% if startPage == 3 %}
                <a class="pagination--btn pagination--btn-number" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
            {% elseif startPage != 2 %}
                <span>&hellip;</span>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <a class="pagination--btn pagination--btn-number" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            {% else %}
                <span class="pagination--btn pagination--btn-number is-active">{{ page }}</span>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <span class="pagination--btn pagination--btn-number">&hellip;</span>
                {% else %}
                    <a class="pagination--btn pagination--btn-number" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                {% endif %}
            {% endif %}
            <a class="pagination--btn pagination--btn-number" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        {% endif %}

        {% if next is defined %}
            <a class="pagination--btn pagination--btn-next" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                <svg class="icon-next" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.88 4.12L14.76 12L6.88 19.88L9 22L19 12L9 2L6.88 4.12Z" fill="currentColor"/>
                </svg>

            </a>
        {% else %}
            <span class="pagination--btn pagination--btn-next">
                <svg class="icon-next" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.88 4.12L14.76 12L6.88 19.88L9 22L19 12L9 2L6.88 4.12Z" fill="currentColor"/>
                </svg>
            </span>
        {% endif %}
    </nav>
{% endif %}